	var practice_value = g_form.getValue('practice');
	
	if(practice_value == '' || isNaN(practice_value) || parseInt(practice_value) < 1){
		g_form.hideFieldMsg('practice', true);
		g_form.showFieldMsg('practice', 'Practice must not be empty and shoudl be numeric');
		return false;
	}
	
	gsftSubmit(null, g_form.getFormElement(), 'validate');
}

